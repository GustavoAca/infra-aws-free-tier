{
  "family": "app-task",
  "networkMode": "bridge",
  "requiresCompatibilities": ["EC2"],
  "cpu": "512",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "gateway",
      "image": "ACCOUNT_ID.dkr.ecr.sa-east-1.amazonaws.com/gateway:latest",
      "essential": true,
      "cpu": 128,
      "memory": 128,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "SPRING_PROFILES_ACTIVE", "value": "prod" },
        { "name": "SERVER_PORT", "value": "8080" }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    },
    {
      "name": "lista-service",
      "image": "ACCOUNT_ID.dkr.ecr.sa-east-1.amazonaws.com/lista-service:latest",
      "essential": true,
      "cpu": 192,
      "memory": 192,
      "portMappings": [
        {
          "containerPort": 8082,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "SPRING_PROFILES_ACTIVE", "value": "prod" },
        { "name": "SERVER_PORT", "value": "8082" }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8082/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    },
    {
      "name": "notification-service",
      "image": "ACCOUNT_ID.dkr.ecr.sa-east-1.amazonaws.com/notification-service:latest",
      "essential": true,
      "cpu": 192,
      "memory": 192,
      "portMappings": [
        {
          "containerPort": 8083,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "SPRING_PROFILES_ACTIVE", "value": "prod" },
        { "name": "SERVER_PORT", "value": "8083" }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8083/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
