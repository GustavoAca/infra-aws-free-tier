{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "secretsmanager:GetSecretValue",
        "secretsmanager:DescribeSecret"
      ],
      "Resource": [
        "arn:aws:secretsmanager:sa-east-1:181684851258:secret:rds-bootstrap-secrets*",
        "arn:aws:secretsmanager:sa-east-1:181684851258:secret:users-service-secrets*",
        "arn:aws:secretsmanager:sa-east-1:181684851258:secret:lista-service-secrets*",
        "arn:aws:secretsmanager:sa-east-1:181684851258:secret:notification-service-secrets*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:sa-east-1:181684851258:log-group:ecs-*"
    }
  ]
}