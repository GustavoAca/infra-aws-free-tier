{
  "family": "app-task",
  "networkMode": "bridge",
  "requiresCompatibilities": ["EC2"],
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "nginx:latest",
      "essential": true,
      "cpu": 64,
      "memory": 64,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/app",
          "awslogs-region": "sa-east-1",
          "awslogs-stream-prefix": "nginx"
        }
      }
    },
    {
      "name": "user-service",
      "image": "ACCOUNT_ID.dkr.ecr.sa-east-1.amazonaws.com/user-service:latest",
      "essential": true,
      "cpu": 256,
      "memory": 256,
      "portMappings": [
        {
          "containerPort": 8081,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "SPRING_PROFILES_ACTIVE", "value": "prod" },
        { "name": "SERVER_PORT", "value": "8081" }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8081/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    },
    {
      "name": "lista-service",
      "image": "ACCOUNT_ID.dkr.ecr.sa-east-1.amazonaws.com/lista-service:latest",
      "essential": true,
      "cpu": 256,
      "memory": 256,
      "portMappings": [
        {
          "containerPort": 8082,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "SPRING_PROFILES_ACTIVE", "value": "prod" },
        { "name": "SERVER_PORT", "value": "8082" }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8082/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    },
    {
      "name": "notification-service",
      "image": "ACCOUNT_ID.dkr.ecr.sa-east-1.amazonaws.com/notification-service:latest",
      "essential": true,
      "cpu": 256,
      "memory": 256,
      "portMappings": [
        {
          "containerPort": 8083,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "SPRING_PROFILES_ACTIVE", "value": "prod" },
        { "name": "SERVER_PORT", "value": "8083" }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8083/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
